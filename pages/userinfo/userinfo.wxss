.container {
  width: 100%;
  height: 100%;
  font-size: 0.8em;
}

.base_info {
  width: 80%;
  height: 180px;
  background-color: burlywood;
  display: flex;
}

.class_list_info {
  width: 80%;
  /* height: 350px; */
  background-color: gray;
  margin-top: 20px;
}

.photo {
  width: 45%;
  height: 100%;
  background-color: powderblue;
  display: flex;
  flex-direction: column;
}
.photo_index{
  width: 100%;
  flex:9;
  background-color: royalblue;
}

.certify_button{
  font-size: 0.8em;
  line-height: 1.5;
  padding: 0px;
  margin: 0px;
  width: 100%;
  border-radius: 0px;
  flex:1;
}

.info_line {
  width: 55%;
  height: 100%;
  background-color: powderblue;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-around;
}

.line {
  width: 90%;
  display: flex;
  border-bottom: 1px solid black;

}

.message_view{
  flex: 1;
  text-align: center;

}

.form_title{
  width:100%;
  height:30px;
  background-color:mediumaquamarine;
  text-align: center;
  line-height: 2;
  border-radius: 10px;
}

.class_info{
  width:100%;
  height:30px;
  background-color:thistle;
  margin-top:1px;
  display: flex;
  line-height: 2;
  justify-content: space-between;
  align-items: center;
}

.class_text_id{
  width: 27%;
  text-align: center;
}
.class_text_name{
  width: 47%;
  text-align: center;
}

.class_button{
  font-size: 0.8em;
  line-height: 2;
  width: 20%;
  height: 80%;
}

