.container {
  width: 100%;
  height: 100%;
  font-size: 0.8em;
}

.info_line{
  width: 80%;
  height: 90px;
  /* background-color: burlywood; */
  display: flex;
  flex-direction: column;
  /* align-items: flex-end; */
  justify-content: space-around;

}

.line{
  width:100%;
  display: flex;
  border-bottom: 1px solid gray;

}

.message_view{
  flex: 1;
  text-align: center;

}

.student_list_info {
  width: 80%;
  /* height: 350px; */
  margin-top: 20px;
  margin-bottom:80px;
}

.form_title{
  width:100%;
  height:30px;
  text-align: center;
  line-height: 2;
  border-radius: 10px;
}
.student_info_outer{
  width:100%;
  height:30px;
  margin-top:1px;
  display: flex;
  line-height: 2;
  justify-content: space-between;
  align-items: center;
}
.student_info{
  width:99%;
  height:30px;
  margin-top:1px;
  margin-right: 3px;
  display: flex;
  line-height: 2;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid gray;
}

.student_item{
  flex:1;
  text-align: center;
}


.sign-button {
  position: fixed;
  bottom: 0;
  width: 80%;
  height: 35px;

  display: flex;
}
.sign_button_half{
  height: 100%;
  width: 50%;
  font-size:1em;
  line-height:2.5;
}
